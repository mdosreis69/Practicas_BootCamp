
USE SPRINGFIELD;

SELECT DESC_PERSONAJE, CHAR_LENGTH(DESC_PERSONAJE) LONG_PERSONAJE1, CHARACTER_LENGTH(DESC_PERSONAJE) LONG_PERSONAJE2, LENGTH(DESC_PERSONAJE) LONG_PERSONAJE3
FROM PERSONAJES;


SELECT DESC_PERSONAJE, LCASE(DESC_PERSONAJE) DESC_PERSONAJE2, LOWER(DESC_PERSONAJE) DESC_PERSONAJE3
FROM PERSONAJES;

SELECT DESC_FRASE, UCASE(DESC_FRASE) DESC_FRASE2, UPPER(DESC_FRASE) DESC_FRASE3
FROM FRASES;

SELECT DESC_FRASE, REPEAT('pato',12) REPETIDO1, REPEAT('pato ',12) REPETIDO2
FROM FRASES
WHERE ID_FRASE=34;

SELECT DESC_FRASE, REVERSE(DESC_FRASE) AL_REVES
FROM FRASES
WHERE ID_FRASE=34;

SELECT DESC_FRASE, REPEAT('pato ',12) REPETIDO2
FROM FRASES
WHERE ID_FRASE=34;

SELECT DESC_FRASE, REPEAT('pato ',12) DESC_FRASE2, LENGTH(DESC_FRASE) LONG_FRASE, LENGTH(REPEAT('pato ',12)) LONG_FRASE2
FROM FRASES
WHERE ID_FRASE=34;

SELECT DESC_FRASE, REPEAT('pato ',12) DESC_FRASE2, CONCAT(' ',REPEAT('pato ',12)) DESC_FRASE3, CONCAT_WS(' ',REPEAT('pato ',12)) DESC_FRASE4
, LENGTH(DESC_FRASE) LONG_FRASE, LENGTH(REPEAT('pato ',12)) LONG_FRASE2, LENGTH(CONCAT(' ',REPEAT('pato ',12))) LONG_FRASE3, LENGTH(CONCAT_WS(' ',REPEAT('pato ',12))) LONG_FRASE4
FROM FRASES
WHERE ID_FRASE=34;

SELECT CONCAT_WS(',','Hola', 'hola', 'vecinitos!') UNA_FRASECITA
FROM DUAL;

SELECT DESC_FRASE, CONCAT(' ',REPEAT('pato ',12)) DESC_FRASE3, RTRIM(LTRIM(CONCAT(' ',REPEAT('pato ',12)))) DESC_FRASE5, TRIM(CONCAT(' ',REPEAT('pato ',12))) DESC_FRASE6
, LENGTH(DESC_FRASE) LONG_FRASE, LENGTH(CONCAT(' ',REPEAT('pato ',12))) LONG_FRASE3, LENGTH(RTRIM(LTRIM(CONCAT(' ',REPEAT('pato ',12))))) LONG_FRASE5, LENGTH(TRIM(CONCAT(' ',REPEAT('pato ',12)))) LONG_FRASE6
FROM FRASES
WHERE ID_FRASE=34;

SELECT DESC_PERSONAJE, INSTR(DESC_PERSONAJE,' ') POS_ESPACIO
, LOCATE(' ',DESC_PERSONAJE) POS_ESPACIO2, LOCATE(' ', DESC_PERSONAJE,2) POS_ESPACIO3, LOCATE(' ', DESC_PERSONAJE,3) POS_ESPACIO4, LOCATE(' ', DESC_PERSONAJE,5) POS_ESPACIO5
, POSITION(' ' IN DESC_PERSONAJE) POS_ESPACIO6
FROM PERSONAJES
WHERE ID_PERSONAJE=20;

SELECT ID_LUGAR, LPAD(ID_LUGAR,3,'0') ID_LUGAR2, RPAD(ID_LUGAR,4,'0') ID_LUGAR3, FORMAT(ID_LUGAR,0) ID_LUGAR4, FORMAT(ID_LUGAR,3) ID_LUGAR5
FROM LUGARES;

SELECT FORMAT(12345.6789,3) CADENA
FROM DUAL;

SELECT DESC_PERSONAJE
, SUBSTR(DESC_PERSONAJE,5) DESC_PERSONAJE2, SUBSTR(DESC_PERSONAJE FROM 5) DESC_PERSONAJE2B
, SUBSTR(DESC_PERSONAJE,1,5) DESC_PERSONAJE3, SUBSTR(DESC_PERSONAJE FROM 1 FOR 5) DESC_PERSONAJE3B
, SUBSTR(DESC_PERSONAJE,-5) DESC_PERSONAJE4, SUBSTR(DESC_PERSONAJE FROM -5) DESC_PERSONAJE4B
FROM PERSONAJES;

SELECT DESC_PERSONAJE
, SUBSTR(DESC_PERSONAJE,-5,3) DESC_PERSONAJE5, SUBSTR(DESC_PERSONAJE FROM -5 FOR 3) DESC_PERSONAJE5B
, MID(DESC_PERSONAJE,-5,3) DESC_PERSONAJE5C
FROM PERSONAJES;


SELECT DESC_PERSONAJE, INSTR(DESC_PERSONAJE,' ') POS_ESPACIO
, SUBSTR(DESC_PERSONAJE,INSTR(DESC_PERSONAJE,' ')) DESC_PERSONAJE2
, SUBSTR(DESC_PERSONAJE,INSTR(DESC_PERSONAJE,' ')+1) DESC_PERSONAJE3
, SUBSTRING_INDEX(DESC_PERSONAJE,' ',1) DESC_PERSONAJE4
, SUBSTRING_INDEX(DESC_PERSONAJE,' ',-1) DESC_PERSONAJE5
FROM PERSONAJES;

SELECT DESC_FRASE
, SUBSTRING_INDEX(DESC_FRASE,'...',1) DESC_FRASE2
, SUBSTRING_INDEX(DESC_FRASE,'...',2) DESC_FRASE3
FROM FRASES
WHERE ID_FRASE=2
;

SELECT DESC_PERSONAJE
, LEFT(DESC_PERSONAJE,1) DESC_PERSONAJE2, LEFT(DESC_PERSONAJE,10) DESC_PERSONAJE2B, LEFT(DESC_PERSONAJE,100) DESC_PERSONAJE2C, LENGTH(LEFT(DESC_PERSONAJE,100)) LONG_PERSONAJE2C
, RIGHT(DESC_PERSONAJE,1) DESC_PERSONAJE3, RIGHT(DESC_PERSONAJE,10) DESC_PERSONAJE3B, RIGHT(DESC_PERSONAJE,100) DESC_PERSONAJE3C, LENGTH(RIGHT(DESC_PERSONAJE,100)) LONG_PERSONAJE3C
FROM PERSONAJES;

SELECT INSERT('SPRINGFIELD',1,6,'SUMMER') CADENA FROM DUAL;

SELECT INSERT('SPRINGFIELD',1,6,'SUMMER') CADENA;

SELECT INSERT('SPRINGFIELD',1,6,'KC') CADENA;

SELECT INSERT('SPRINGFIELD',5,6,'KC') CADENA;

SELECT STRCMP('SPRINGFIELD','SPRINGFIELD') COMPARACION1
, STRCMP('SPRINGFIELD','SIMPSON') COMPARACION2
, STRCMP('SIMPSON','SPRINGFIELD') COMPARACION3
;

SELECT ASCII('S') ASCII_S
, ASCII('s') ASCII_s
, ASCII('SPRINGFIELD') ASCII_SPRINGFIELD
, ASCII ('S3') ASCII_S3;

SELECT FIELD('HOMER','MAGGIE','BART','LISA','HOMER','MARGE') BUSQUEDA1
, FIELD('Homer','MAGGIE','BART','LISA','HOMER','MARGE') BUSQUEDA2
, FIELD('HOMER','MAGGIE','BART','LISA','MARGE') BUSQUEDA3
, FIELD('HOMER',null) BUSQUEDA4
;

SELECT FIND_IN_SET('HOMER','MAGGIE,BART,LISA,HOMER,MARGE') BUSQUEDA1
, FIND_IN_SET('Homer','MAGGIE,BART,LISA,HOMER,MARGE') BUSQUEDA2
, FIND_IN_SET('HOMER','MAGGIE,BART,LISA,MARGE') BUSQUEDA3
, FIND_IN_SET('HOMER',null) BUSQUEDA4
;


